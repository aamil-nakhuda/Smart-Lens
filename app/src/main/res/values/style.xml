<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageListItemSize">
        <item name="cornerSize">5%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="PlaceHolderImage">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="MyNormalBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:backgroundTint">?attr/action_bar</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyOutlineBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Splash" parent="Theme.SmartLens">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>
</resources>